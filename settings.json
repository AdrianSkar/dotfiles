{
	"editor.fontSize": 16,
	"editor.tabSize": 2,
	"workbench.editor.openSideBySideDirection": "right",
	"editor.mouseWheelZoom": true,
	"editor.minimap.enabled": false,
	"workbench.enableExperiments": false,
	"breadcrumbs.enabled": true,
	"emmet.triggerExpansionOnTab": true,
	"emmet.showSuggestionsAsSnippets": true,
	// Configure file associations to languages (e.g. `"*.extension": "html"`). These have precedence over the default associations of the languages installed.
	"files.associations": {
		"*.html": "html",
		"*.xml": "xml",
		"*.json": "jsonc"
	},
	"diffEditor.renderSideBySide": true,
	"git.enableSmartCommit": true,
	"editor.insertSpaces": false,
	//rulers
	"editor.rulers": [
		80,
		120
	],
	"workbench.colorCustomizations": {
		"editorRuler.foreground": "#85c7852e"
	},
	"editor.wordWrap": "on",
	"[markdown]": {
		"editor.wordWrap": "wordWrapColumn",
		"editor.wordWrapColumn": 80,
		"editor.autoClosingQuotes": "always",
		"editor.autoClosingOvertype": "always",
		"editor.quickSuggestions": {
			"comments": "on",
			"strings": "on",
			"other": "on"
		}
	},
	"extensions.ignoreRecommendations": false,
	"editor.tabCompletion": "on",
	"editor.acceptSuggestionOnEnter": "off",
	"editor.autoClosingOvertype": "always",
	"editor.fontFamily": "'Cascadia Code', 'Fira Code', 'CodeNewRoman Nerd Font Mono', Consolas, 'Courier New', monospace",
	"editor.fontLigatures": true,
	"terminal.integrated.cursorBlinking": true,
	"editor.suggest.localityBonus": true,
	"editor.quickSuggestionsDelay": 300,
	"editor.quickSuggestions": {
		"other": true,
		"comments": false,
		"strings": false
	},
	// https://marketplace.visualstudio.com/items?itemName=aaron-bond.better-comments#overview
	"better-comments.tags": [
		{
			"tag": "!",
			"color": "#FF2D00",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "|",
			"color": "#F4D35D",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "/",
			"color": "#6081fb",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "To do",
			"color": "#FF8C00",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		},
		{
			"tag": "*",
			"color": "#98C379",
			"strikethrough": false,
			"underline": false,
			"backgroundColor": "transparent",
			"bold": false,
			"italic": false
		}
	],
	"editor.linkedEditing": true,
	"workbench.editor.pinnedTabSizing": "compact",
	"window.title": "${dirty}${separator}${activeEditorMedium}${separator}${rootName}",
	"workbench.editor.decorations.colors": true,
	"html.format.indentHandlebars": true,
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
		// "editor.foldingStrategy": "indentation"
	},
	"[md]": {
		"editor.defaultFormatter": "vscode.markdown-language-features"
		// "editor.foldingStrategy": "indentation"
	},
	"bookmarks.label.suggestion": "suggestWhenSelected",
	"bookmarks.sideBar.expanded": true,
	"workbench.editorAssociations": {
		"git-rebase-todo": "gitlens.rebase",
		"*.pdf": "pdf.preview"
	},
	"[css]": {
		"editor.defaultFormatter": "aeschli.vscode-css-formatter"
	},
	"html.format.templating": true,
	"editor.suggestSelection": "first",
	"cSpell.enabled": true,
	"terminal.integrated.gpuAcceleration": "on",
	"diffEditor.ignoreTrimWhitespace": false,
	"editor.inlineSuggest.enabled": true,
	"github.copilot.enable": {
		"*": true,
		"yaml": false,
		"plaintext": false,
		"markdown": true,
		"html": true
	},
	"[javascript]": {
		"editor.autoClosingBrackets": "languageDefined",
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmDelete": false,
	"settingsSync.ignoredSettings": [
		"workbench.colorTheme"
	],
	"settingsSync.ignoredExtensions": [
		"techer.open-in-browser",
		"streetsidesoftware.code-spell-checker"
	],
	"terminal.integrated.fontFamily": "'Hack Nerd Font Mono', 'FiraMono Nerd Font Mono', Consolas, 'Courier New', monospace",
	"git.autofetch": true,
	"git.confirmSync": false,
	"editor.snippetSuggestions": "top",
	"editor.bracketPairColorization.enabled": true,
	"editor.suggest.preview": true,
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"workbench.colorTheme": "Night Wolf (black)",
	"terminal.integrated.copyOnSelection": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},
	"editor.formatOnSave": true,
	"editor.guides.bracketPairs": true,
	"telemetry.telemetryLevel": "off",
	"files.autoSave": "afterDelay",
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"markdown-preview-enhanced.previewTheme": "atom-dark.css",
	"scm.countBadge": "focused",
	"workbench.editor.tabSizing": "shrink",
	"workbench.sideBar.location": "right",
	"gitlens.hovers.currentLine.over": "line",
	"gitlens.currentLine.enabled": false,
	"gitlens.codeLens.authors.enabled": false,
	"gitlens.codeLens.scopes": [
		"document",
		"containers"
	],
	"gitlens.codeLens.enabled": false,
	"gitlens.statusBar.enabled": false,
	"gitlens.hovers.enabled": false,
	"terminal.integrated.shellIntegration.enabled": true,
	"emojisense.languages": {
		"javascript": true,
		"markdown": true,
		"html": true,
		"plaintext": {
			"markupCompletionsEnabled": false,
			"emojiDecoratorsEnabled": false
		},
		"scminput": true,
		"git-commit": true
	},
	"editor.defaultFormatter": "VisualStudioExptTeam.vscodeintellicode",
	"editor.hover.enabled": true,
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.cursorBlinking": "phase",
	"terminal.integrated.shellIntegration.suggestEnabled": true,
	"terminal.integrated.smoothScrolling": true,
	"terminal.integrated.env.windows": {},
	"terminal.integrated.env.linux": {},
	"editor.stickyScroll.enabled": true,
	"cmake.options.statusBarVisibility": "compact",
	"workbench.tree.enableStickyScroll": true,
	"window.zoomLevel": 1
}
